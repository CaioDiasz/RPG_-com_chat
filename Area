public class Area {
    private String nome;
    private String descricao;
    private String dificuldade;
    private boolean temInimigo;
    private boolean temRecompensa;

    public Area(String nome, String descricao, String dificuldade, boolean temInimigo, boolean temRecompensa) {
        this.nome = nome;
        this.descricao = descricao;
        this.dificuldade = dificuldade;
        this.temInimigo = temInimigo;
        this.temRecompensa = temRecompensa;
    }

    public void exibeFichaTecnica() {
        System.out.println("Área: " + nome);
        System.out.println("Descrição: " + descricao);
        System.out.println("Dificuldade: " + dificuldade);
        System.out.println("Inimigos: " + (temInimigo ? "Sim" : "Não"));
        System.out.println("Recompensas: " + (temRecompensa ? "Sim" : "Não"));
    }

    public void interagir() {
        if (temInimigo) {
            System.out.println("Você encontrou um inimigo!");
        } else if (temRecompensa) {
            System.out.println("Você encontrou uma recompensa!");
        } else {
            System.out.println("A área está tranquila.");
        }
    }

    public String getNome() {
        return nome;
    }
}
